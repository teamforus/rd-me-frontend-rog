.modal.modal-auth2
    .modal-backdrop(ng-click="$ctrl.close()")

    //- Sign In by qr-code
    .modal-content(ng-show="$ctrl.showQrCodeBlock")
        .modal-close.mdi.mdi-close(ng-click="$ctrl.close()")

        .modal-title popup_auth.labels.join
        .modal-subtitle popup_auth.labels.scancode

        .block.block-auth-qr-code
            .qr_code#auth_qrcode

        .modal-footer
            //-.footer-text {{ "popup_auth.labels.timelimit" | translate }}
        
        .modal-subtitle.subtitle-left.hidden-xs.
            Scan de QR code aan de rechterzijde met de QR-scanner in de me app. 
            #[br] #[br]
            De me app wordt gebruikt om makkelijk en veilig in te loggen, betalingen te doen en vouchers te beheren.
            #[br] #[br]
        .block.block-auth-qr-code.hidden-xs
            .qr_code#auth_qrcode.hidden-xs
        
        .modal-subtitle.subtitle-left.download-badges.hidden-xs
            a(href="https://itunes.apple.com/nl/app/me-forus/id1422610676")
                img(src="./assets/img/landing/icon-app/app-store-badge.svg") 
            a(href="https://play.google.com/store/apps/details?id=io.forus.me")
                img(src="./assets/img/landing/icon-app/icon-app-android.svg")

